<resources>
    <!-- Header -->
    <style name="slogan">
        <item name="android:fontFamily">@font/irish_grover</item>
        <item name="android:textSize">@dimen/slogan_text_size</item>
        <item name="android:textColor">@color/basic_text_color</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="logo_image" parent="default_image_style">
        <item name="android:layout_width">@dimen/logo_width</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <!-- Body -->
    <style name="draw_and_show_signs" parent="default_image_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_margin">@dimen/pictures_margin</item>
    </style>

    <!-- Footer -->
    <style name="contact_us_string">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:paddingTop">@dimen/layout_padding</item>
        <item name="android:paddingLeft">@dimen/layout_padding</item>
        <item name="android:paddingBottom">@dimen/layout_padding</item>
    </style>

    <style name="phone_icon" parent="icon_size">
        <item name="android:paddingLeft">@dimen/layout_padding</item>
        <item name="android:layout_below">@id/contact_us_string</item>
    </style>

    <style name="phone_string" parent="footer_text_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">@dimen/icon_size</item>
        <item name="android:paddingLeft">@dimen/layout_padding</item>
        <item name="android:paddingBottom">@dimen/layout_padding</item>
        <item name="android:layout_below">@id/contact_us_string</item>
        <item name="android:layout_toRightOf">@id/phone_icon</item>
    </style>

    <style name="email_icon" parent="icon_size">
        <item name="android:paddingLeft">@dimen/layout_padding</item>
        <item name="android:layout_below">@id/phone_icon</item>
    </style>

    <style name="email_string" parent="footer_text_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">@dimen/icon_size</item>
        <item name="android:paddingLeft">@dimen/layout_padding</item>
        <item name="android:layout_below">@id/phone_number</item>
        <item name="android:layout_toRightOf">@id/email_icon</item>
    </style>

    <style name="location_pin_icon" parent="default_image_style">
        <item name="android:layout_width">30dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingLeft">@dimen/location_pin_padding</item>
    </style>

    <style name="location_address" parent="footer_text_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:paddingLeft">@dimen/layout_padding</item>
        <item name="android:paddingRight">@dimen/layout_padding</item>
    </style>

    <!-- General styles -->
    <style name="default_image_style">
        <item name="android:scaleType">fitCenter</item>
        <item name="android:adjustViewBounds">true</item>
    </style>

    <style name="icon_size" parent="default_image_style">
        <item name="android:layout_width">@dimen/icon_size</item>
        <item name="android:layout_height">@dimen/icon_size</item>
    </style>

    <style name="footer_text_style">
        <item name="android:textSize">@dimen/footer_text_size</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

</resources>
